package main;

import java.util.Scanner;

public class Main {

	//맥도날드 키오스크
	public static void main(String[] args) {
		
		//스캐너 준비
		Scanner sc = new Scanner(System.in);
		
		//포장 매장
		System.out.println("1.포장 2.매장");
		int packageType = sc.nextInt();
		
		//메뉴 선택 (버거) 메뉴판 보여주고 입력 받
		System.out.println("==============햄버거==============");
		System.out.println("1. 상하이 스파이시");
		System.out.println("2. 베이컨 토마토 디럭스");
		System.out.println("3. 슈비");
		
		int burger = sc.nextInt();
		
		//메뉴선택 (사이드)
		System.out.println("==============사이드==============");
		System.out.println("1. 감자튀김");
		System.out.println("2. 치즈스틱");
		System.out.println("3. 코올슬로");
		int side = sc.nextInt();
		
		
		//메뉴 선택 (음료)
		System.out.println("==============음료=============");
		System.out.println("1. 콜라");
		System.out.println("2. 사이다");
		System.out.println("3. 환타");
		int drink = sc.nextInt();
		
		//결제 
		
		//대기번호 발급
		
		//주문확인서 출력
		System.out.println("주문하신 메뉴는");
		System.out.println("햄버거"+ burger);
		System.out.println("사이드"+ side);
		System.out.println("음료수"+ drink);
		System.out.println("입니다.");
		
	}

}
