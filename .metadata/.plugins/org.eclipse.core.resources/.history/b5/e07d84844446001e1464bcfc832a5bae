package main;

import java.util.Scanner;

public class Memu {
	
	public void burgerMenu() {
		//스캐너 준비
			Scanner sc = new Scanner(System.in);
		
			//final : 재할당 불가능 상수일 경우 변수는 대문자로 작성한다.
			final String BURGER01= "상하이 스파이시";
			final String BURGER02 = "베이컨 토마토 디럭스";
			final String BURGER03 = "슈비버거";
			final String SIDE01 = "감자튀김";
			final String SIDE02 = "치즈스틱";
			final String SIDE03 = "코올슬로";
			final String DRINK01 = "콜라";
			final String DRINK02 = "사이다";
			final String DRINK03 = "환타";
			
			//메뉴 선택 (버거) 메뉴판 보여주고 입력 받기
			System.out.println("==============햄버거==============");
			System.out.println("1. "+ BURGER01);
			System.out.println("2. "+ BURGER02);
			System.out.println("3. "+ BURGER03);
			int burger = sc.nextInt();
			
			//메뉴선택 (사이드)
			System.out.println("==============사이드==============");
			System.out.println("1. "+ SIDE01);
			System.out.println("2. "+ SIDE02);
			System.out.println("3. "+ SIDE03);
			int side = sc.nextInt();
			
				
			//메뉴 선택 (음료)
			System.out.println("==============음료=============");
			System.out.println("1. "+ DRINK01);
			System.out.println("2. "+ DRINK02);
			System.out.println("3. "+ DRINK03);
			int drink = sc.nextInt();
	}
}
